{
  "name": "zarr-gl",
  "version": "0.5.0",
  "description": "Custom WebGL Zarr layer for Mapbox and Maplibre",
  "type": "module",
  "main": "dist/zarr-gl.js",
  "module": "dist/zarr-gl.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/zarr-gl.js",
    "./dist/zarr-gl.js": "./dist/zarr-gl.js"
  },
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "dev": "webpack watch --mode development",
    "build": "webpack --mode production",
    "serve": "npx http-server dist -p 8888 --cors",
    "fmt": "prettier --write src/*.ts",
    "lint": "eslint src/*.ts",
    "check": "tsc --noEmit",
    "ci:fmt": "prettier --check src/*.ts",
    "ci:lint": "npm run lint",
    "ci:check": "npm run check",
    "all": "npm run fmt && npm run lint && npm run check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carderne/zarr-gl.git"
  },
  "author": "Chris Arderne <chris@rdrn.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carderne/zarr-gl/issues"
  },
  "homepage": "https://github.com/carderne/zarr-gl",
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/eslint__js": "^8.42.3",
    "@types/ndarray": "^1.0.14",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "mapbox-gl": "^3.7.0",
    "prettier": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "vitest": "^3.1.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "zarrita": "^0.5.4"
  }
}
